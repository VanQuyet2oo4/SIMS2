@model son.Models.Class

@{
    ViewData["Title"] = "Delete";
    Layout = "/Views/Shared/LayoutTeacher.cshtml";
}




<div class="col-lg-8" style="margin: 0 auto;">
 

    <h3>Are you sure you want to delete this?</h3>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">View Class</h5>

            <!-- Hidden field to hold ClassId -->
            <input type="hidden" asp-for="ClassId" />

            <!-- Course dropdown -->
            <div class="mb-3 row">
                <label asp-for="CourseId" class="col-sm-2 form-label">Course</label>
                <div class="col-sm-10">
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId" disabled></select>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TeacherId" class="col-sm-2 form-label">Teacher</label>
                <div class="col-sm-10">
                    <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId" disabled></select>
                </div>
            </div>
            <!-- Semester dropdown -->
            <div class="mb-3 row">
                <label asp-for="Semester" class="col-sm-2 form-label">Semester</label>
                <div class="col-sm-10">
                    <select asp-for="Semester" class="form-select" disabled>
                        <option value="Spring">Spring</option>
                        <option value="Summer">Summer</option>
                        <option value="Fall">Fall</option>
                        <option value="Winter">Winter</option>
                    </select>
                </div>
            </div>

            <!-- Year input -->
            <div class="mb-3 row">
                <label asp-for="Year" class="col-sm-2 form-label">Year</label>
                <div class="col-sm-10">
                    <input asp-for="Year" class="form-control" readonly />
                </div>
            </div>

            <!-- Room Name input -->
            <div class="mb-3 row">
                <label asp-for="RoomName" class="col-sm-2 form-label">Room Name</label>
                <div class="col-sm-10">
                    <input asp-for="RoomName" class="form-control" readonly />
                </div>
            </div>

            <!-- Class Name input -->
            <div class="mb-3 row">
                <label asp-for="ClassName" class="col-sm-2 form-label">Class Name</label>
                <div class="col-sm-10">
                    <input asp-for="ClassName" class="form-control" readonly />
                </div>
            </div>

        </div>
    <form asp-action="Delete" style="margin-bottom:10px;margin-left:10px">
        <input type="hidden" asp-for="ClassId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
    </div>

</div>


