@model son.Models.Class

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/LayoutTeacher.cshtml";
}


<div class="col-lg-8" style="margin: 0 auto;">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create Class</h5>

            <form asp-action="Create">
                <div class="mb-3 row">
                    <label asp-for="CourseId" class="col-sm-2 form-label">Course</label>
                    <div class="col-sm-10">
                        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="TeacherId" class="col-sm-2 form-label">Teacher</label>
                    <div class="col-sm-10">
                        <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.TeacherId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Semester" class="col-sm-2 form-label">Semester</label>
                    <div class="col-sm-10">
                        <select asp-for="Semester" class="form-select">
                            <option value="">Select</option>
                            <option value="Spring">Spring</option>
                            <option value="Summer">Summer</option>
                            <option value="Fall">Fall</option>
                            <option value="Winter">Winter</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Year" class="col-sm-2 form-label">Year</label>
                    <div class="col-sm-10">
                        <input asp-for="Year" class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="RoomName" class="col-sm-2 form-label">Room Name</label>
                    <div class="col-sm-10">
                        <input asp-for="RoomName" class="form-control" />
                    </div>
                </div>  
                <div class="mb-3 row">
                    <label asp-for="ClassName" class="col-sm-2 form-label">Class Name</label>
                    <div class="col-sm-10">
                        <input asp-for="ClassName" class="form-control" />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-lg">Create Class</button>
                <a asp-action="Index" class="btn btn-primary w-lg "style="background:red">  Back To List</a>
                
            </form>
        </div>
    </div>
    <!-- end card -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
