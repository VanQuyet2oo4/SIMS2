@model IEnumerable<son.Models.Teacher>

@{
    ViewData["Title"] = "ManagementTE";
    Layout = "~/Views/Shared/LayoutTeacher.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Management Teacher</h5>
                <div class="table-responsive">
                    <table id="datatable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Teacher Name</th>
                                <th>Address</th>
                                <th>Email</th>
                                <th>Phone number</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model)
                            {
                                <tr>
                                    <td>@teacher.TeacherId</td>
                                    <td>@teacher.Name</td>
                                    <td>@teacher.Address</td>
                                    <td>@teacher.Email</td>
                                    <td>@teacher.PhoneNumber</td>
                                    <td>
                                        <a asp-action="EditTE" asp-route-id="@teacher.TeacherId" style="text-decoration: none;">
                                            <button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2 me-2" style="display:inline !important">
                                               Edit
                                            </button>
                                        </a>
                                        <a asp-action="DeleteTE" asp-route-id="@teacher.TeacherId" style="text-decoration: none;">
                                            <button type="button" id="kayne" class="btn btn-outline-dark px-4 d-flex gap-2" style="display:inline !important">
                                               Delete
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

